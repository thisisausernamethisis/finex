{
  "extends": [
    "next/core-web-vitals"
  ],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "prisma/generated/**",
    "prisma/client/**",
    ".prisma/**"
  ],
  "rules": {
    "@typescript-eslint/ban-ts-comment": [
      "error",
      {
        "ts-nocheck": true,
        "ts-ignore": "allow-with-description",
        "ts-expect-error": "allow-with-description"
      }
    ]
  }
}
